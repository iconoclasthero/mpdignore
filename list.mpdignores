#!/bin/bash

. mpdignore.functions

[[ "$1" == @(edit|e|nano|-e|-E) ]] && editscript

getmpdconf
getmpdmusicdir
echo "$mpdconf"

echo "$musicdir"
while read -r line
 do
  ignoredir="${line%.mpdignore}"
  while read -r ignored
    do
      [[ "$ignored" != \#* ]] && printf '%s%s\n' "$ignoredir" "$ignored"
    done < <(cat "$line")
 done < <(find "$musicdir" -name .mpdignore)

