printf '%s \n%s \n%s \n \n%s\n%b%s\n' \
       "$(toilet -tf "$font1" "$artist / $title")" \
       "$(toilet -tf "$font1" "$album:")" \
       "$(toilet -tf "$font1" "${blocklimit:+Blocklimit: }${prevcount:-$count}/$limit")" \
       "$(mpctitle mpdlinger)" \
       "$clrindent" \
       "$(date)" |
   "${lolargs[@]}" & bgpids+=( "$!" )

