###--> prntprog() <--###############################################################################

progloop(){
  local hr2out
  while :; do
#    (( paused )) && sleep 1 && continue
    [[ "$state" = paused ]] && sleep 1 && continue
#    wait
#    prntprog  # or whatever displays the current elapsed time
    local artist title state pos length elapsed duration percent volume repeat random consume
    readarray -t mpdcout < <(mpdc 'currentsong\nstatus')
    for i in "${mpdcout[@]}"; do
                 [[ "$i" = Pos:\ * ]] && { pos="${i#*: }"; (( pos++ )); }
               [[ "$i" = Title:\ * ]] &&   title="${i#*: }"
               [[ "$i" = state:\ * ]] &&   state="${i#*: }"
              [[ "$i" = Artist:\ * ]] &&   artist="${i#*: }"
              [[ "$i" = volume:\ * ]] &&   vol="${i#*: }"
              [[ "$i" = repeat:\ * ]] &&   repeat="${i#*: }"
              [[ "$i" = random:\ * ]] && { random="${i#*: }";     (( random )) && random='âœ…'  || random='âŒ' ; }
              [[ "$i" = single:\ * ]] && { u_single="${i#*: }"; (( u_single )) && single='âœ…'  || unset single; }
             [[ "$i" = consume:\ * ]] && { consume="${i#*: }";   (( consume )) && consume='âœ…' || consume='âŒ'; }
      [[ "$i" = playlistlength:\ * ]] &&   length="${i#*: }"
                [[ "$i" = time:\ * ]] && { elapsed="${i#*: }"; elapsed="${elapsed%\:*}"; duration="${i##*\:}";
                                           percent="$(( (100 * elapsed)/duration ))";
                                           elapsed="$(sec2sex "$elapsed")"; duration="$(sec2sex "$duration")"; }
    done
    [[ "$state" = play ]] && state="$bold${dkgreen}playing$tput0"
    [[ "$state" = pause ]] && { state="${boldred}paused$tput0"; sleep 1; continue; }
    [[ "$randomst" = on ]] && hr2out="mpdlinger random on" || hr2out="mpdlinger"
    dkgreen=$(tput setaf 2)
    local lingerpause="$paused" lingerstate lingerlimit="$limit" output
    lcount="$count"
    (( ! count )) && count="$prevcount"
    (( ! count )) && count="$limit"
    lingertitle="linger$tput0"
    if (( lingerpause )); then
      lingerstate="$redâ–®â–®$tput0"
      lcount="$tput0$white$lcount" lingerlimit="$lingerlimit"
    else
      lingerstate="$bold$dkgreenâ–¶$tput0"
      lcount="$bold$dkgreen$lcount" lingerlimit="$lingerlimit$tput0"
    fi

    {
      c_path_cur=$(tput sitm; tput setaf 7) # pale whiute path
      c_path_que=$(tput sitm; tput setaf 7) # pale white

      c_aa_cur=$(tput sitm; tput setaf 33) # Blue for artist and album
      c_aa_que=$(tput sitm; tput setaf 12) # Blue for artist and album

      c_title_cur=$(tput sitm; tput setaf 214) # Magenta for the song file name
      c_title_que=$(tput sitm; tput setaf 3) # Magenta for the song file name

      printf '%b%s%s%s%s%s - %s%s%s%s%s\n' \
        "$clrindent" \
        "$bold" \
        "$c_aa_cur" \
        "${ritm}" \
        "${paused:+$italics}" \
        "$artist" \
        "$c_title_cur" \
        "${ritm}" \
        "${paused:+$italics}" \
        "$title" \
        "$tput0"

#     printf '%b%s -- %s\n' "$clrindent" "$artist" "$title"
      printf '%b[%s] #%s/%s  %s/%s (%s%%)\n' "$clrindent" "$state" "$pos" "$length" "$elapsed" "$duration" "$percent"
      printf '%bvolume: %s%% âŸ³  random: %s consume: %s %s: %s/%s%s %s' "$clrindent" "$vol" "$random" "$consume" \
                                                                     "$lingertitle" "$lcount" "$lingerlimit" \
                                                                     "${blocklimit:+($blocklimit)}" "$lingerstate"
      printf '\n\n%s\n\n%b%s' "$(hr2 "$hr2out")" "$clrindent" "$(date)"
    }|"${lolargs[@]}"
    tput cuu 6; tput cr
    sleep 2
  done
}
##--> progloop() <--###############################################################################

wait "${bgpids[@]}" #for what... for the lolargs above?

## output to mpdlinger "$statefile".
writestate > "$statefile"
writestate >&"$logfd"

tput cuu 7; # tput cr
progloop &  # run in background
progpid=$!
startfifo(){
  if kill -0 "$fifopid" 2>/dev/null; then
    printf '%sfifopid=%s\n' "$(itag)" "$fifopid" >&"$logfd"
  else
    fifoin & fifopid="$!"
    printf '%sfifopid=%s\n' "$(itag)" "$fifopid" >&"$logfd"
    printf 'fifopid=%s\n' "$fifopid" >> "$statefile"
  fi
}
startfifo
