    (( verbose )) &&
     { printf '%smpdlingerpid = %s\n' "$(vtag)" "$mpdlingerpid"
       printf '%s  transition = %s\n' "$(vtag)" "$transition"
       printf '%s  blocklimit = %s\n' "$indent" "$blocklimit"
