           "$tput0" \
           "$bold" \
           "$c_aa_cur" \
           "$album" \
           "$tput0"
    readarray -d \/ -t file <<< "$filepath"
      if (( "${#file[@]}" > 2)); then
#        printf '%s   File : %s%s%s%s%s%s/\n' \
        printf '%s   File : %s%s%s%s%s/\n' \
               "$bold" \
