logsong(){
  ##requires shopt -s extglob
  shopt -p extglob >/dev/null || { extgloboff=1; shopt -s extglob; }
  ## this first line might never occurr, I'm not sure I understand how bash works here.
  ## [[ "$1" = --action=\"* ]] && { action="${1#*\"}" action="${action%\"}"; shift; }
  [[ "$1" = --action=* ]] && { action="${1#*=}"; shift; }
  : "${action:=skip}"
  : "${mpdskipm3u:=/library/music/mpdplaylists/.mpdskip.m3u}"
  local i
  local         rc=0
  local     action="$action"
  local mpdskipm3u="$mpdskipm3u"
  local     logged="$filepath"
  local     mpdlog="$mpdskipm3u"
  ## format for mpd 0.23.x
  ## i=$(date "+%b %d %H:%M : player: $1 ")
  [[ "$logged" ]] || logged=$(mpcp current -f %file%)
  ## use if need to actually write to log:
  ## printf -v logline '%(%Y-%m-%dT%H:%M:%S)T player: %s "%s"\n' -1 "$action" "$line"

  ## various attempts at making ssh work:
  ##  ssh -p "$sshport" "$mpdhost" "echo "${logged@Q}" >> "$mpdlog"" 2>/dev/null
  ##  ssh -p "$sshport" "$mpdhost" "printf '%s\\n' ${logged@Q} >> $mpdlog"
  ##  ssh -p "$sshport" "$mpdhost" "echo "$logged" | tee -a "$mpdlog""

  ## change to readarray to address more issues with sshL
  # sshout=$(ssh -p "$sshport" "$mpdhost" "printf '%s\n' ${logged@Q} >> $mpdlog" 2>&1)

  [[ mpdhost != @(localhost|127.0.0.1) ]] && remotempd=1
  if (( remotempd )); then
    readarray -t sshout < <(ssh -p "$sshport" "$mpdhost" "printf '%s\n' ${logged@Q} >> $mpdlog" 2>&1)
    for (( i=0; i<"${#sshout[@]}"; i++ )); do
      [[ "${sshout[$i]}" = "mux_client_request_session: session request failed:"* ]] && unset 'sshout[i]'
      [[ "${sshout[$i]}" = "ControlSocket"*"already exists"* ]] && unset 'sshout[i]'
      [[ "${sshout[$i]}" = "Warning: untrusted X11 forwarding setup failed:"* ]] && unset 'sshout[i]'
      [[ "${sshout[$i]}" = *No\ xauth\ data* ]] && unset 'sshout[i]'
    done
    ## compact array
    sshout=( "${sshout[@]}" )
    (( "${#sshout[@]}" )) && printf '[error] ssh: %s\n' "${sshout[@]}" >&2 && rc=1
  else
     printf '%s\n' ${logged@Q} >> "$mpdlog"
  fi

  (( extgloboff )) && shopt -u extglob
  return "$rc"
}
