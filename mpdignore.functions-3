cklinger(){
  unset lingeron lingercount lingerlimit lingerpause
  local verbname="${FUNCNAME}verb"
  local verbose="${!verbname:-0}"
  local debug="$verbose"
  local tmplog=/tmp/cklinger.log
  local end endpause procfiles line
  local lingerts='ℹ️  20..-..-..T..:..:..: '
  local lingerdir="${lingerdir:-/var/lib/mpd/mpdlinger}"
  local lingerpidf="${lingerpidf:-$lingerdir/mpdlinger.pid}"
  local lingerstate="${lingerstate:-$lingerdir/mpdlinger.state}"
  local lingerlog="${lingerlog:-$lingerdir/mpdlinger.log}"
  local lingercmd="${lingercmd:-$lingerdir/mpdlinger.cmd}"
  local lingersock="${lingersock:-/var/lib/mpd/mpdlinger/mpdgolinger.sock}"
  (( verbose )) && echo "[info]: lingerdir=$lingerdir" >> "$tmplog" 2>&1
  (( verbose )) && echo "[info]: lingerpidf=$lingerpidf" >> "$tmplog" 2>&1
  (( verbose )) && echo "[info]: lingerlog=$lingerlog" >> "$tmplog" 2>&1
  (( verbose )) && cat "$lingerpidf" >> "$tmplog" 2>&1
  (( verbose )) && cat "$lingerstate" >> "$tmplog" 2>&1

  [[ ! -w "$tmplog" ]] && tmplog='/dev/null'
#  [[ -r "$lingerstate" ]] && { while IFS= read -r line; do
  { while IFS= read -r line; do
    [[ "$line" = writetime*      ]] && {     lingertime="${line#*=}"; continue; }
    [[ "$line" = lingersongid*   ]] && {   lingersongid="${line#*=}"; continue; }
    [[ "$line" = lingerpause*    ]] && {    lingerpause="${line#*=}"; continue; }
    [[ "$line" = lingercount*    ]] && {    lingercount="${line#*=}"; continue; }
    [[ "$line" = lingerlimit*    ]] && {    lingerlimit="${line#*=}"; continue; }
    [[ "$line" = lingerbase*     ]] && {     lingerbase="${line#*=}"; continue; }
    [[ "$line" = lingerblockon*  ]] && {  lingerblockon="${line#*=}"; continue; }
    [[ "$line" = lingerblocklmt* ]] && { lingerblocklmt="${line#*=}"; continue; }
    [[ "$line" = lingerpid*      ]] && {      lingerpid="${line#*=}"; continue; }
    [[ "$line" = lingerxy*       ]] && {       lingerxy="${line#*=}"; continue; }
    [[ "$line" = lingerx*        ]] && {        lingerx="${line#*=}"; continue; }
    [[ "$line" = lingery*        ]] && {        lingery="${line#*=}"; continue; }
#   [[ "$line" = lingeron*       ]] && {       lingeron="${line#*=}"; continue; }
#  done < "$lingerstate" ; } 2>> "$tmplog"
  done < <(mpdgolinger --socket "$lingersock" --execpost=none status) ; } 2>> "$tmplog"

  now=$(date +%s) diff=$(( now - $(date -d "$lingertime" +%s) ))
  lingeron=$(( diff < 2 ? 1 : 0 ))
  if ! (( lingeron )); then
    shopt -p nullglob >/dev/null 2>&1 || { nullgloboff=1; shopt -s nullglob; } 2>/dev/null
    (( lingerpid )) && procfiles=("/proc/$lingerpid/"*) && (( "${#procfiles[@]}" )) && lingeron=1 || unset lingerpid
    (( ! lingerpid )) && [[ -f "$lingerpidf" && -r "$lingerpidf" ]] && lingerpid=$(< "$lingerpidf")
    (( lingerpid )) && procfiles=("/proc/$lingerpid/"*) && (( "${#procfiles[@]}" )) && lingeron=1 || unset lingerpid
    (( lingeron )) || { [[ -w "$lingerstate" ]] && rm -f "$lingerstate" || printf 'Unable to remove %s\n' "$lingerstate" >> "$tmplog"; } 2>/dev/null
    (( nullgloboff )) && shopt -u nullglob > /dev/null
  fi
  (( lingercount == 0 )) && (( lingerlimit )) && lingercount="$lingerlimit";

  (( debug )) && {
        printf 'lingercount/lingerlimit = %s/%s\n' "$lingercount" "$lingerlimit" >> "$tmplog";
        printf 'lingerpid=%s\nlingeron=%s\nend=%s\nlingerpause=%s\n' "$lingerpid" "$lingeron" "$end" "$lingerpause" >> "$tmplog"
    };
}
